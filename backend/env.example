# RSS智能订阅器后端环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 基础项目信息
PROJECT_NAME="RSS智能订阅器"
PROJECT_VERSION="0.2.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development"

# 安全配置
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS配置（开发环境）
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000"

# 数据库配置
DATABASE_URL="sqlite:///./rss_subscriber.db"
DATABASE_ECHO=false

# RSSHub配置
RSSHUB_BASE_URL="https://rsshub.app"
RSSHUB_REQUEST_TIMEOUT=30
RSSHUB_MAX_RETRIES=3

# RSS内容抓取配置
RSS_FETCH_INTERVAL_MINUTES=30
RSS_CONTENT_RETENTION_DAYS=30
RSS_MAX_ENTRIES_PER_FEED=100

# 定时任务配置
SCHEDULER_TIMEZONE="Asia/Shanghai"
SCHEDULER_MAX_WORKERS=4

# 日志配置
LOG_LEVEL="INFO"
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# API限流配置
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_BURST=200

# AI功能配置（可选）
OPENAI_API_KEY=""
AI_MODEL_NAME="gpt-3.5-turbo"
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER="./uploads" 